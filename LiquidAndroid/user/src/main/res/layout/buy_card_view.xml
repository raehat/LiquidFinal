<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TATA MOTORS INC"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/text_share_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Price: "
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/company_name"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/share_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/company_name"
        android:layout_marginLeft="126dp"
        android:text="₹25"
        android:textSize="18sp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/change_in_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/text_share_price"
        android:text="+₹2"
        android:layout_marginLeft="18dp"
        android:textColor="#048700"/>

    <TextView
        android:id="@+id/corp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TATA"
        android:textColor="#7C7C7C"
        android:textAlignment="textEnd"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>


</RelativeLayout>