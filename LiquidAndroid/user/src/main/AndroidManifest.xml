<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.liquid">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Liquid">
        <activity android:name=".Appearance"
            android:parentActivityName=".HomePage"></activity>
        <activity
            android:name=".DetailsBuyShare"
            android:parentActivityName=".HomePage" />
        <activity android:name=".HomePage" />
        <activity
            android:name=".Auth.Login"
            android:parentActivityName=".Auth.SignUp" />
        <activity
            android:name=".Auth.SignUp"
            android:parentActivityName=".Auth.FirstPage" />
        <activity android:name=".Auth.FirstPage" />
        <activity android:name=".Auth.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>